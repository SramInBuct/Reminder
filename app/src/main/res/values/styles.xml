<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerSize">32dp</item>
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">0dp</item>
        <item name="neumorph_cornerSizeBottomRight">0dp</item>
    </style>
    <style name="tab_menu_item" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="neumorph_shapeType">@drawable/radiobutton_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radiobutton_background</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:width">100dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@drawable/text_selector</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Draft2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ThemeColorDark</item>
        <item name="colorPrimaryVariant">@color/cardview_light_background</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/Background</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">18dp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">8dp</item>
        <item name="neumorph_cornerSizeTopRight">8dp</item>
        <item name="neumorph_cornerSizeBottomLeft">8dp</item>
        <item name="neumorph_cornerSizeBottomRight">8dp</item>
    </style>
    <style name="CustomShapeAppearanceBtn">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">64dp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">8dp</item>
        <item name="neumorph_cornerSizeTopRight">8dp</item>
        <item name="neumorph_cornerSizeBottomLeft">8dp</item>
        <item name="neumorph_cornerSizeBottomRight">8dp</item>
    </style>
    <style name="CustomShapeAppearanceBottom">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">18dp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">4dp</item>
        <item name="neumorph_cornerSizeTopRight">4dp</item>
        <item name="neumorph_cornerSizeBottomLeft">4dp</item>
        <item name="neumorph_cornerSizeBottomRight">4dp</item>
    </style>
    <style name="dialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <!--边框-->
        <item name="android:windowFrame">@color/gray</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 点击外部是否允许取消 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="reminderRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:textColor">@color/radio_button_text_color_selector</item>
    </style>
</resources>